<section id="home-pages" class="section-content">
    <div class="container">
        <!-- Start Section Title -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title-area text-center">
                    <h2 class="section-title">{{title}}</h2>
                    <p class="section-dis">{{desc}}</p>
                    <img alt="" src="http://onin.infinitelayout.com/images/icon.png">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="clear"></div>
            {{#each items}}
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <div class="single-item text-center">
                    <a href="{{href}}" class="default link" target="_blank">
                        <span class="image-bg">
                            <span style="background-image: url('{{img}}');" class="image-shop-scroll"></span>
                        </span>
                    </a>
                    <h3 class="item-text">
                        <a href="{{href}}">{{text}}</a>
                    </h3>
                    <a class="theme-btn" href="{{href}}" target="_blank">Launch</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>