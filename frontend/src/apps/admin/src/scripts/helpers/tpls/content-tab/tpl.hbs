<div class="tabs">
    <div class="container main-desc">
        <h2 class="title">{{title}}</h2>
        <div class="col-md-offset-2 col-md-8 mobi-clear-padding  desc">{{{description}}}</div>
    </div>
    <div class="container tab-items">
        <div class="row">
            <div class="col-sm-2 col-xs-12 mobi-clear-padding">
                <div class="titles-container">
                    <ul class="titles">
                        {{#each items}} {{#if @index}}
                        <li class="col-xs-4 col-sm-4 col-md-12 col-lg-12 mobi-clear-padding">
                            {{else}}
                            <li class="col-xs-4 col-sm-4 col-md-12 col-lg-12 mobi-clear-padding active">
                                {{/if}}
                                <a href="#{{tabId}}" data-toggle="tab" aria-expanded="false">{{tabName}}</a>
                                <span class="hidden-xs hidden-sm pointer"></span>
                            </li>
                            {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-sm-10 col-xs-12 mobi-clear-padding">
                <div class="tab-content">
                    {{#each items}} {{#if @index}}
                    <div class="tab-pane" id="{{tabId}}">
                        {{else}}
                        <div class="tab-pane active" id="{{tabId}}">
                            {{/if}}
                            <div class="animate start-animation" data-maxwidth="580">
                                <div class="content">
                                    <div class="col-xs-12 col-sm-4 mobi-clear-padding img">
                                        <img src="{{src}}">
                                    </div>
                                    <div class="col-xs-12 col-sm-8 mobi-clear-padding desc">
                                        <!--<h3>{{title}}</h3>-->
                                        <div>{{{description}}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>