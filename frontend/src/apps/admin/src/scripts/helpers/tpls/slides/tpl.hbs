<div class="banner carousel slide" id="carousel-generic" data-ride="carousel">
    <ol class="carousel-indicators">
        {{#each items}}
            {{#if @index}}
                <li data-target="#carousel-generic" data-slide-to="{{@index}}"></li>
            {{else}}
                <li data-target="#carousel-generic" data-slide-to="{{@index}}" class="active"></li>
            {{/if}}
        {{/each}}
    </ol>
    <div class="carousel-inner">
        {{#each items}}
            {{#if @index}}
                <div class="item">
            {{else}}
                <div class="item active">
            {{/if}}
                <div class="banner-bg carousel-item" style="background-image: url({{src}})">
                    <div class="tips">
                        <div class="content">
                            <div class="head">{{head}}</div>
                            <div class="line"></div>
                            <span class="title">{{title}}</span>
                            <div class="desc">{{{description}}}</div>
                            {{#if link}}
                                <button class="btn btn-default pull-right"><a href="{{link}}" target="_blank">查看详情</a></button>
                            {{/if}}
                        </div>
                     </div>
                </div>
            </div>
        {{/each}}
        <div class="left carousel-control hidden-xs" href="#carousel-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </div>
        <div class="right carousel-control hidden-xs" href="#carousel-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </div>
    </div>
</div>