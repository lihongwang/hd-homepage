<section id="contact" class="contact-area section-padding" data-stellar-background-ratio="0.6" style="background-position: 0% -69.3375px;">
        <div class="container">
            <div class="row contact-form-design-area">
                <!-- START CONTACT FORM INFOMATION DESIGN AREA -->
                <div class="col-md-6 contact-details-list">
                    <h2>{{contactTitle}}</h2>
                    <p>{{contactText}}</p>
                    {{#each contact}}
                    <div class="single-contact">
                        <h3><i class="{{icon}}"></i>{{title}}</h3>
                    </div>
                    {{/each}}
                </div>
                <!-- / END CONTACT FORM INFOMATION DESIGN AREA -->
                <div class="col-md-6">
                    <!-- START CONTACT FORM DESIGN AREA -->
                    <div class="contact-form">
                        <form id="contact-form" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <input type="text" name="name" class="form-control" id="first-name" placeholder="Name" required="required">
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="email" name="email" class="form-control" id="email" placeholder="Email" required="required">
                                </div>
                                <div class="form-group col-md-12">
                                    <textarea rows="6" name="message" class="form-control" id="description" placeholder="Your Message" required="required"></textarea>
                                </div>
                                <div class="col-md-12">
                                    <div class="actions wow fadeInDown" data-wow-delay=".4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInDown;">
                                        <input type="submit" value="send message" name="submit" id="submitButton" class="btn btn-lg btn-contact-bg" title="{{btnTitle}}">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- / END CONTACT FORM DESIGN AREA -->
                </div>
            </div>
        </div>
    </section>